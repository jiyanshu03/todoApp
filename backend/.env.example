# Copy this file to .env and fill in your values.

# MongoDB connection string (e.g. from MongoDB Atlas)
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# JWT secret for login and auth. Optional for local dev (a default is used if unset).
JWT_SECRET=your_secret_at_least_32_chars_long

# Optional: port for local dev (default 3000)
# PORT=3000
